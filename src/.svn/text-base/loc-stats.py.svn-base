import csv

class LoC():
    '''
    Classe responsável por cálculos  a respeito da métrica de linha de código
    '''
    def __init__(self, results_file, src_dir):
        self.results_file = results_file
        self.src_dir = src_dir
    
    def getLoC(self):
        '''
        '''
        dict_methods = {}
        reader = csv.reader(open(self.results_file))
        for row in reader:
            if reader.line_num != 1:
                fqdn = row[0].split('.')
                method_name = fqdn[-1]
                file_name = fqdn[-2]
                file = open(self.src_dir + file_name + '.java')
                line_list = file.readlines()
                for line in line_list:
                    print line
                        
            
